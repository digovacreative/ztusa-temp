    "fields": [
      {
        "key": "field_dh_bg",
        "label": "Background Image",
        "name": "bg_image",
        "type": "image",
        "return_format": "id",
        "preview_size": "large",
        "library": "all"
      },
      {
        "key": "field_dh_bg_mobile",
        "label": "Mobile Background Image",
        "name": "bg_image_mobile",
        "type": "image",
        "instructions": "Optional mobile-specific background; falls back to desktop if empty.",
        "return_format": "id",
        "preview_size": "medium",
        "library": "all"
      },
      {
        "key": "field_dh_bg_focal",
        "label": "Background Focal Point",
        "name": "bg_focal",
        "type": "text",
        "instructions": "CSS background-position (e.g. '40% 25%' or 'center right').",
        "default_value": "center center"
      },
      {
        "key": "field_dh_overlay",
        "label": "Overlay Color",
        "name": "overlay_color",
        "type": "color_picker",
        "default_value": "#00000073"
      },
      {
        "key": "field_dh_hmain",
        "label": "Heading (main)",
        "name": "heading_main",
        "type": "text",
        "default_value": "Every Child Deserves a Chance to"
      },
      {
        "key": "field_dh_haccent",
        "label": "Heading (accent)",
        "name": "heading_accent",
        "type": "text",
        "default_value": "Learn"
      },
      {
        "key": "field_dh_widget",
        "label": "Fundraise Up Widget ID",
        "name": "fu_widget_id",
        "type": "text",
        "instructions": "Value after # in your Fundraise Up trigger link (e.g. XTGVSAJV).",
        "default_value": "XTGVSAJV"
      },
      {
        "key": "field_dh_minheight",
        "label": "Minimum Height (px)",
        "name": "min_height",
        "type": "number",
