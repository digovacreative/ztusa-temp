        "min": 360,
        "step": 10
      },
      {
        "key": "field_dh_content_w",
        "label": "Donation Box Column Width (px)",
        "name": "content_width",
        "type": "number",
        "default_value": 560,
        "min": 320,
        "step": 10
      },
      {
        "key": "field_dh_align",
        "label": "Content Alignment",
        "name": "content_align",
        "type": "select",
        "choices": {
          "left": "Left",
          "center": "Centered",
          "right": "Right"
        },
        "default_value": "left",
        "ui": 1,
        "return_format": "value"
      },
      {
        "key": "field_dh_mobile_btn",
        "label": "Mobile Button",
        "name": "mobile_button",
        "type": "link",
        "instructions": "Shown fixed at the bottom of the screen on mobile. (Fundraise Up widget still renders; this is an extra CTA.)",
        "return_format": "array"
      }
    ],
    "location": [
      [
        {
          "param": "block",
          "operator": "==",
          "value": "acf/donation-hero"
        }
      ]
